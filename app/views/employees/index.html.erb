<h1>Employee List</h1>
<%= link_to "Add Employee",new_employee_path %>
<table>
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th colspan="3"></th>
	</tr>
	<% @employees.each do |employee| %>
		<tr>
			<td><%= employee.first_name %></td>
			<td><%= employee.email %></td>
			<td><%= link_to 'Show', employee_path(employee) %></td>		
			<td><%= link_to 'Edit', edit_employee_path(employee) %></td>
			<td><%= link_to 'Destroy', employee_path(employee),method: :delete, data:{confirm: 'Are you sure?'} %></td>	
		</tr>	
	<% end %>	
</table>


